@model WebApplication12.Models.Book

<h2>Chi Tiết Sách</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">Mã Sách</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Tiêu Đề</dt>
        <dd class="col-sm-10">@Model.Title</dd>

        <dt class="col-sm-2">Tác Giả</dt>
        <dd class="col-sm-10">@Model.Author</dd>

        <dt class="col-sm-2">Mô Tả</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Giá</dt>
        <dd class="col-sm-10">@Model.Price.ToString("C")</dd>

        <dt class="col-sm-2">Hình Ảnh</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.Image))
            {
                <img src="@Model.Image" alt="Ảnh Sách" style="max-width: 300px;" />
            }
            else
            {
                <p>Không có hình ảnh</p>
            }
        </dd>
    </dl>
</div>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Chỉnh Sửa</a>
<a asp-action="Index" class="btn btn-secondary">Quay Lại Danh Sách</a>