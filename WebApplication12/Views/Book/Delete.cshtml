@model WebApplication12.Models.Book

<h2>Xác Nhận Xóa Sách</h2>

<div>
    <h3>Bạn có chắc chắn muốn xóa cuốn sách này?</h3>
    <dl class="row">
        <dt class="col-sm-2">Mã Sách</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Tiêu Đề</dt>
        <dd class="col-sm-10">@Model.Title</dd>

        <dt class="col-sm-2">Tác Giả</dt>
        <dd class="col-sm-10">@Model.Author</dd>

        <dt class="col-sm-2">Giá</dt>
        <dd class="col-sm-10">@Model.Price.ToString("C")</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Xóa" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </form>
</div>